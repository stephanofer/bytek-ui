---
import "@styles/global.css";
import Header from "@components/layout/Header.astro";
import Footer from "@components/layout/Footer.astro";
import { getLangFromUrl, getLocalizedPath } from "@/i18n/utils";

interface Props {
  title?: string;
  description?: string;
}

const lang = getLangFromUrl(Astro.url);

const {
  title = lang === "es"
    ? "Bytek — Desarrollo de Software & Consultoría IT"
    : "Bytek — Software Development & IT Consulting",
  description = lang === "es"
    ? "Bytek — Construimos productos digitales escalables y de alto rendimiento. Desarrollo de software, soluciones de IA, cloud & DevOps."
    : "Bytek — We build scalable, high-performance digital products. Software development, AI solutions, cloud & DevOps consulting.",
} = Astro.props;

// ── SEO: Canonical & Hreflang ─────────────────────
const siteUrl = "https://bytek.com";
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;

// Build alternate URLs for BOTH languages
const currentPath = Astro.url.pathname;
const esPath = getLocalizedPath(currentPath, "es");
const enPath = getLocalizedPath(currentPath, "en");
const esUrl = new URL(esPath, siteUrl).href;
const enUrl = new URL(enPath, siteUrl).href;

// OG locale mapping
const ogLocale = lang === "es" ? "es_AR" : "en_US";
const ogLocaleAlternate = lang === "es" ? "en_US" : "es_AR";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO: Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- SEO: Hreflang — tells search engines about all language versions -->
    <link rel="alternate" hreflang="es" href={esUrl} />
    <link rel="alternate" hreflang="en" href={enUrl} />
    <link rel="alternate" hreflang="x-default" href={esUrl} />

    <!-- SEO: Title & Description -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Bytek" />
    <meta property="og:locale" content={ogLocale} />
    <meta property="og:locale:alternate" content={ogLocaleAlternate} />
    <meta property="og:url" content={canonicalUrl} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </head>
  <body class="font-sans text-neutral-900 bg-white antialiased min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
